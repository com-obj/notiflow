{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "type": "object",
   "properties": {
      "type": {
         "type": "string"
      },
      "header": {
         "type": "object",
         "properties": {
            "configuration-name": {
               "type": "string"
            }
         },
         "required": [
            "configuration-name"
         ]
      },
      "body": {
         "type": "object",
         "properties": {
            "message": {
               "type": "object",
               "properties": {
                  "content": {
                     "type": "object",
                     "properties": {
                        "subject": {
                           "type": "string"
                        },
                        "text": {
                           "type": "string"
                        }
                     },
                     "required": [
                        "subject",
                        "text"
                     ]
                  }
               },
               "required": [
                  "content"
               ]
            },
            "attributes": {
               "type": "object",
               "properties": {
                  "originalEvent": {
                     "type": "object",
                     "properties": {
                        "type": {
                           "type": "string"
                        },
                        "data": {
                           "type": "object",
                           "properties": {
                              "id": {
                                 "type": "string"
                              },
                              "title": {
                                 "type": "string"
                              },
                              "content": {
                                 "type": "string"
                              },
                              "link": {
                                 "type": "string"
                              },
                              "featuredImage": {
                                 "type": "array",
                                 "items": [
                                    {
                                       "type": "string"
                                    }
                                 ]
                              },
                              "category": {
                                 "type": "object",
                                 "properties": {
                                    "id": {
                                       "type": "string"
                                    },
                                    "slug": {
                                       "type": "string"
                                    },
                                    "name": {
                                       "type": "string"
                                    },
                                    "color_b": {
                                       "type": "string"
                                    },
                                    "color_a": {
                                       "type": "string"
                                    }
                                 },
                                 "required": [
                                    "id",
                                    "slug",
                                    "name",
                                    "color_b",
                                    "color_a"
                                 ]
                              },
                              "author": {
                                 "type": "object",
                                 "properties": {
                                    "avatar": {
                                       "type": "string"
                                    },
                                    "description": {
                                       "type": "string"
                                    },
                                    "name": {
                                       "type": "string"
                                    },
                                    "id": {
                                       "type": "string"
                                    }
                                 },
                                 "required": [
                                    "avatar",
                                    "description",
                                    "name",
                                    "id"
                                 ]
                              }
                           },
                           "required": [
                              "id",
                              "title",
                              "content",
                              "link",
                              "featuredImage",
                              "category",
                              "author"
                           ]
                        }
                     },
                     "required": [
                        "type",
                        "data"
                     ]
                  }
               },
               "required": [
                  "originalEvent"
               ]
            }
         },
         "required": [
            "message",
            "attributes"
         ]
      }
   },
   "required": [
      "type",
      "header",
      "body"
   ]
}