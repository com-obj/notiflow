{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "type": "object",
   "properties": {
      "type": {
         "type": "string"
      },
      "header": {
         "type": "object",
         "properties": {
            "configuration-name": {
               "type": "string"
            }
         },
         "required": [
            "configuration-name"
         ]
      },
      "body": {
         "type": "object",
         "properties": {
            "message": {
               "type": "object",
               "properties": {
                  "content": {
                     "type": "object",
                     "properties": {
                        "subject": {
                           "type": "string"
                        },
                        "text": {
                           "type": "string"
                        }
                     },
                     "required": [
                        "subject",
                        "text"
                     ]
                  }
               },
               "required": [
                  "content"
               ]
            },
            "attributes": {
               "type": "object",
               "properties": {
                  "originalEvent": {
                     "type": "object",
                     "properties": {
                        "type": {
                           "type": "string"
                        },
                        "data": {
                           "type": "object",
                           "properties": {
                              "id": {
                                 "type": "string"
                              },
                              "name": {
                                 "type": "string"
                              },
                              "description": {
                                 "type": "string"
                              },
                              "ticketUrl": {
                                 "type": "string"
                              },
                              "startAt": {
                                 "type": "string"
                              },
                              "locationId": {
                                 "type": "string"
                              },
                              "endAt": {
                                 "type": "string"
                              },
                              "location": {
                                 "type": "object",
                                 "properties": {
                                    "googlePlaceId": {
                                       "type": "string"
                                    },
                                    "name": {
                                       "type": "string"
                                    }
                                 },
                                 "required": [
                                    "googlePlaceId",
                                    "name"
                                 ]
                              },
                              "organizer": {
                                 "type": "object",
                                 "properties": {
                                    "description": {
                                       "type": "string"
                                    },
                                    "url": {
                                       "type": "string"
                                    },
                                    "imageUrl": {
                                       "type": "string"
                                    },
                                    "name": {
                                       "type": "string"
                                    }
                                 },
                                 "required": [
                                    "description",
                                    "url",
                                    "imageUrl",
                                    "name"
                                 ]
                              },
                              "imageUrl": {
                                 "type": "string"
                              }
                           },
                           "required": [
                              "id",
                              "name",
                              "description",
                              "ticketUrl",
                              "startAt",
                              "locationId",
                              "endAt",
                              "location",
                              "organizer",
                              "imageUrl"
                           ]
                        }
                     },
                     "required": [
                        "type",
                        "data"
                     ]
                  }
               },
               "required": [
                  "originalEvent"
               ]
            }
         },
         "required": [
            "message",
            "attributes"
         ]
